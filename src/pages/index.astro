---
import Layout from '../layouts/Layout.astro';

const navItems = [
  { href: '#features', text: '特色' },
  { href: '#download', text: '下载' },
  { href: '#about', text: '关于' },
  { href: 'https://github.com/v2er-app', text: 'GitHub' },
];
---

<Layout title="V2er - 优雅的 V2EX 客户端">
  <main>
    <div class="container">
      <div class="content">
        <div class="app-preview">
          <img src="/image/android-screenshot.png" alt="V2er Android 预览" class="phone android" />
          <img src="/image/ios-screenshot.png" alt="V2er iOS 预览" class="phone ios" />
        </div>
        
        <div class="text-content">
          <h1>A beautiful v2ex client built for clean and power.</h1>
          
          <div class="download-buttons">
            <a href="https://play.google.com/store/apps/details?id=me.ghui.v2er" 
               class="store-button" 
               target="_blank">
              <i class="fab fa-google-play"></i>
              Google Play Store
            </a>
            <a href="https://apps.apple.com/app/id1596137027" 
               class="store-button" 
               target="_blank">
              <i class="fab fa-apple"></i>
              Apple App Store
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  .container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 2rem;
  }

  .content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    gap: 4rem;
  }

  .app-preview {
    flex: 1;
    display: flex;
    gap: 2rem;
  }

  .phone {
    max-height: 600px;
    width: auto;
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.4));
  }

  .text-content {
    flex: 1;
  }

  h1 {
    font-size: 3.5rem;
    line-height: 1.2;
    margin-bottom: 2rem;
    font-weight: 600;
  }

  .download-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .store-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    background: rgba(255,255,255,0.1);
    border-radius: 0.5rem;
    color: white;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .store-button:hover {
    background: rgba(255,255,255,0.2);
  }

  @media (max-width: 1024px) {
    .content {
      flex-direction: column;
      text-align: center;
    }

    .app-preview {
      order: -1;
    }

    .phone {
      max-height: 400px;
    }

    h1 {
      font-size: 2.5rem;
    }

    .download-buttons {
      align-items: center;
    }
  }
</style>
