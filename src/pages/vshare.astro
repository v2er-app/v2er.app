<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="发现更多有趣的应用与工具">
  <title>发现更多 - V2er</title>
  <link rel="icon" type="image/png" href="/favicon.png">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      /* Colors using RGB format for alpha channel support */
      --leaf-green: 34, 197, 94;
      --leaf-green-dark: 22, 163, 74;
      --leaf-green-light: 74, 222, 128;
      --background: 255, 255, 255;
      --foreground: 0, 0, 0;
      --text-secondary: 86, 86, 86; /* WCAG AA compliant */
      --accent: 34, 197, 94; /* Leaf green */
    }

    [data-theme="dark"] {
      --background: 28, 28, 30;
      --foreground: 255, 255, 255;
      --text-secondary: 152, 152, 157;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Inter', 'PingFang SC',
                   'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
      background: linear-gradient(135deg,
        rgb(240, 253, 244) 0%,
        rgb(255, 255, 255) 50%,
        rgb(240, 253, 244) 100%);
      color: rgb(var(--foreground));
      min-height: 100vh;
      transition: background 0.3s ease, color 0.3s ease;
      /* Fix iOS viewport bounce */
      overscroll-behavior: contain;
      -webkit-overflow-scrolling: touch;
      position: relative;
    }

    [data-theme="dark"] body {
      background: linear-gradient(135deg,
        rgb(28, 28, 30) 0%,
        rgb(18, 18, 20) 50%,
        rgb(0, 0, 0) 100%);
    }

    /* Background grid pattern */
    body::before {
      content: '';
      position: fixed;
      inset: 0;
      background-image:
        linear-gradient(rgba(var(--leaf-green), 0.03) 1px, transparent 1px),
        linear-gradient(90deg, rgba(var(--leaf-green), 0.03) 1px, transparent 1px);
      background-size: 50px 50px;
      pointer-events: none;
      z-index: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
      position: relative;
      z-index: 1;
    }

    /* Glass morphism utilities */
    .glass {
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      background: rgba(255, 255, 255, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    [data-theme="dark"] .glass {
      background: rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    /* Header */
    header {
      padding: 20px 0;
      position: sticky;
      top: 0;
      z-index: 100;
      transition: all 0.3s ease;
    }

    header .glass {
      border-bottom: 1px solid rgba(var(--leaf-green), 0.1);
    }

    .header-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .logo {
      display: flex;
      align-items: center;
      gap: 12px;
      text-decoration: none;
      color: rgb(var(--foreground));
      transition: transform 0.2s ease;
    }

    .logo:hover {
      transform: scale(1.02);
    }

    .logo-icon {
      width: 48px;
      height: 48px;
      border-radius: 1rem;
      box-shadow: 0 4px 12px rgba(var(--leaf-green), 0.3);
      transition: all 0.2s ease;
      object-fit: cover;
    }

    .logo:hover .logo-icon {
      box-shadow: 0 6px 16px rgba(var(--leaf-green), 0.4);
    }

    .logo-text {
      font-size: 20px;
      font-weight: 600;
    }

    .theme-toggle {
      background: rgba(var(--background), 0.1);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(var(--foreground), 0.1);
      width: 52px;
      height: 52px;
      border-radius: 1rem;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      transition: all 0.2s ease;
      -webkit-tap-highlight-color: transparent;
    }

    .theme-toggle:hover {
      transform: scale(1.05);
      background: rgba(var(--background), 0.2);
    }

    .theme-toggle:active {
      transform: scale(0.95);
    }

    .theme-toggle:focus-visible {
      outline: 2px solid rgb(var(--accent));
      outline-offset: 4px;
    }

    .theme-toggle svg {
      transition: all 0.3s ease;
    }

    /* Theme icon colors - matching pease.day */
    [data-theme="light"] .theme-toggle svg {
      color: rgb(107, 114, 128); /* gray-600 */
    }

    [data-theme="dark"] .theme-toggle svg {
      color: rgb(250, 204, 21); /* yellow-400 */
    }

    /* Hero Section */
    .hero {
      padding: 60px 0 40px;
      text-align: center;
    }

    .hero h1 {
      font-size: clamp(32px, 8vw, 56px);
      font-weight: 700;
      margin-bottom: 16px;
      letter-spacing: -0.02em;
      background: linear-gradient(135deg,
        rgb(var(--foreground)) 0%,
        rgb(var(--leaf-green)) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero p {
      font-size: 18px;
      color: rgb(var(--text-secondary));
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }

    /* Products Grid */
    .products {
      padding: 40px 0 80px;
    }

    .products-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 24px;
      max-width: 1000px;
      margin: 0 auto;
    }

    .product-card {
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      background: rgba(255, 255, 255, 0.4);
      border: 1px solid rgba(255, 255, 255, 0.3);
      border-radius: 2rem;
      padding: 32px;
      text-decoration: none;
      color: rgb(var(--foreground));
      display: flex;
      flex-direction: column;
      min-height: 300px;
      position: relative;
      overflow: hidden;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow:
        0 10px 15px -3px rgba(0, 0, 0, 0.1),
        0 4px 6px -4px rgba(0, 0, 0, 0.1);
    }

    [data-theme="dark"] .product-card {
      background: rgba(0, 0, 0, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .product-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg,
        rgb(var(--leaf-green)),
        rgb(var(--leaf-green-light)));
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .product-card:hover {
      transform: scale(1.02);
      box-shadow:
        0 20px 25px -5px rgba(var(--leaf-green), 0.15),
        0 8px 10px -6px rgba(var(--leaf-green), 0.1);
      background: rgba(255, 255, 255, 0.6);
    }

    [data-theme="dark"] .product-card:hover {
      background: rgba(0, 0, 0, 0.3);
    }

    .product-card:hover::before {
      opacity: 1;
    }

    .product-card:active {
      transform: scale(0.98);
    }

    .product-card:focus-visible {
      outline: 2px solid rgb(var(--accent));
      outline-offset: 4px;
    }

    .product-icon {
      width: 80px;
      height: 80px;
      border-radius: 1.25rem;
      margin-bottom: 20px;
      object-fit: contain;
      background: rgba(var(--background), 0.5);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      padding: 12px;
      border: 1px solid rgba(var(--foreground), 0.05);
      transition: transform 0.2s ease;
    }

    .product-card:hover .product-icon {
      transform: scale(1.05);
    }

    .product-icon.no-bg {
      background: transparent;
      border: none;
      padding: 0;
    }

    .product-name {
      font-size: 24px;
      font-weight: 600;
      margin-bottom: 12px;
      color: rgb(var(--foreground));
    }

    .product-description {
      font-size: 16px;
      line-height: 1.6;
      color: rgb(var(--text-secondary));
      margin-bottom: 20px;
      flex-grow: 1;
    }

    .product-link {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      color: rgb(var(--leaf-green));
      font-weight: 500;
      font-size: 15px;
      transition: gap 0.3s ease;
      margin-top: auto;
    }

    .product-card:hover .product-link {
      gap: 12px;
    }

    .arrow {
      transition: transform 0.3s ease;
    }

    .product-card:hover .arrow {
      transform: translateX(4px);
    }

    /* Footer */
    footer {
      padding: 40px 0;
      text-align: center;
      border-top: 1px solid rgba(var(--foreground), 0.1);
      opacity: 0.6;
      position: relative;
      z-index: 1;
    }

    footer p {
      font-size: 14px;
      color: rgb(var(--text-secondary));
    }

    /* Responsive */
    @media (max-width: 768px) {
      .hero h1 {
        font-size: 36px;
      }

      .hero p {
        font-size: 16px;
      }

      .products-grid {
        grid-template-columns: 1fr;
        gap: 20px;
      }

      .product-card {
        padding: 24px;
        min-height: 260px;
      }

      .product-icon {
        width: 64px;
        height: 64px;
      }
    }

    /* Animation */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .product-card {
      animation: fadeInUp 0.6s ease forwards;
    }

    .product-card:nth-child(1) { animation-delay: 0.1s; }
    .product-card:nth-child(2) { animation-delay: 0.2s; }
    .product-card:nth-child(3) { animation-delay: 0.3s; }
  </style>
</head>
<body>
  <!-- Header -->
  <header>
    <div class="container">
      <div class="header-content">
        <a href="/" class="logo">
          <img src="/favicon.png" alt="Share" class="logo-icon">
          <span class="logo-text">Share</span>
        </a>
        <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">
          <svg id="themeIcon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <!-- Moon icon (default for light mode) -->
            <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
          </svg>
        </button>
      </div>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="hero" aria-labelledby="hero-title">
    <div class="container">
      <h1 id="hero-title">发现更多</h1>
      <p>探索更多有趣的应用与工具，提升你的效率与体验</p>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="products" aria-label="精选产品列表">
    <div class="container">
      <div class="products-grid" role="list">
        <!-- Product 1: 试试双拼 -->
        <article class="product-card" role="listitem">
          <a href="https://ulpb.app" target="_blank" rel="noopener noreferrer"
             aria-label="了解更多关于试试双拼 - 投入一周时间，收获终身效率的双拼输入法学习应用">
            <img src="/image/shuangpin-logo.webp" alt="试试双拼应用图标" class="product-icon">
            <h3 class="product-name">试试双拼</h3>
            <p class="product-description">投入一周时间，收获终身效率。这项简单实用的技能，值得你现在就开始学习。</p>
            <span class="product-link" aria-hidden="true">
              了解更多
              <span class="arrow">→</span>
            </span>
          </a>
        </article>

        <!-- Product 2: Daystill -->
        <article class="product-card" role="listitem">
          <a href="https://daystill.app" target="_blank" rel="noopener noreferrer"
             aria-label="了解更多关于Daystill - 跟踪事件和特殊日子的倒数日应用">
            <img src="https://daystill.pages.dev/logo.webp" alt="Daystill应用图标" class="product-icon">
            <h3 class="product-name">Daystill</h3>
            <p class="product-description">跟踪事件和特殊日子，你的最佳倒数日应用。精美的界面，强大的功能。</p>
            <span class="product-link" aria-hidden="true">
              了解更多
              <span class="arrow">→</span>
            </span>
          </a>
        </article>

        <!-- Product 3: Pease -->
        <article class="product-card" role="listitem">
          <a href="https://pease.day" target="_blank" rel="noopener noreferrer"
             aria-label="了解更多关于Pease - 美观简约的环境音混音器应用">
            <img src="https://pease.day/icon-128x128.png" alt="Pease应用图标" class="product-icon no-bg">
            <h3 class="product-name">Pease</h3>
            <p class="product-description">美观简约的环境音混音器，为专注、放松或睡眠创造完美的声音环境。</p>
            <span class="product-link" aria-hidden="true">
              了解更多
              <span class="arrow">→</span>
            </span>
          </a>
        </article>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer>
    <div class="container">
      <p>© 2025 V2er. All rights reserved.</p>
    </div>
  </footer>

  <script>
    // Theme toggle functionality
    const themeToggle = document.getElementById('themeToggle');
    const themeIcon = document.getElementById('themeIcon');
    const html = document.documentElement;

    // SVG icon paths
    const moonIcon = '<path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>';
    const sunIcon = '<circle cx="12" cy="12" r="5"></circle><line x1="12" y1="1" x2="12" y2="3"></line><line x1="12" y1="21" x2="12" y2="23"></line><line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line><line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line><line x1="1" y1="12" x2="3" y2="12"></line><line x1="21" y1="12" x2="23" y2="12"></line><line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line><line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>';

    // Check for saved theme preference or default to light mode
    const currentTheme = localStorage.getItem('theme') || 'light';
    html.setAttribute('data-theme', currentTheme);
    updateThemeIcon(currentTheme);

    if (themeToggle) {
      themeToggle.addEventListener('click', () => {
        const currentTheme = html.getAttribute('data-theme');
        const newTheme = currentTheme === 'light' ? 'dark' : 'light';

        html.setAttribute('data-theme', newTheme);
        localStorage.setItem('theme', newTheme);
        updateThemeIcon(newTheme);
      });
    }

    function updateThemeIcon(theme: string) {
      if (themeIcon) {
        // Light mode shows moon, dark mode shows sun (like pease.day)
        themeIcon.innerHTML = theme === 'light' ? moonIcon : sunIcon;
      }
    }

    // Detect system theme preference
    if (!localStorage.getItem('theme')) {
      const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
      const systemTheme = prefersDark ? 'dark' : 'light';
      html.setAttribute('data-theme', systemTheme);
      updateThemeIcon(systemTheme);
    }
  </script>
</body>
</html>
