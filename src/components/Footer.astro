---
const currentYear = new Date().getFullYear();
---

<footer class="py-8 mt-16 border-t border-white/10">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row justify-between items-center gap-4">
      <div class="flex items-center gap-2">
        <img src="/favicon-dark.svg" alt="V2er Logo" class="h-8 w-8">
        <span class="text-gray-400">© {currentYear} V2er. All rights reserved.</span>
      </div>
      
      <div class="flex items-center gap-6">
        <a
          href="/help"
          class="text-gray-400 hover:text-white transition-colors text-sm"
        >
          问题反馈
        </a>
        <a
          href="https://github.com/v2er-app"
          target="_blank"
          class="text-gray-400 hover:text-white transition-colors"
        >
          <i class="fab fa-github text-xl"></i>
        </a>
        <a
          href="https://t.me/v2er_app"
          target="_blank"
          class="text-gray-400 hover:text-white transition-colors"
        >
          <i class="fab fa-telegram text-xl"></i>
        </a>
      </div>
    </div>
  </div>
</footer> 